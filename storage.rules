rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Install photos — authenticated upload, authenticated read
    match /install-photos/{projectId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null
                   && request.resource.size < 10 * 1024 * 1024  // 10MB max
                   && request.resource.contentType.matches('image/.*');
    }

    // Survey photos — authenticated upload, authenticated read
    match /survey-photos/{projectId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null
                   && request.resource.size < 10 * 1024 * 1024
                   && request.resource.contentType.matches('image/.*');
    }

    // Documents — authenticated read, Cloud Functions write
    match /documents/{documentId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if false; // Cloud Functions only via Admin SDK
    }

    // Signatures — authenticated upload for e-signatures
    match /signatures/{userId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null
                   && request.auth.uid == userId
                   && request.resource.size < 1 * 1024 * 1024  // 1MB max
                   && request.resource.contentType.matches('image/.*');
    }

    // Default deny
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
